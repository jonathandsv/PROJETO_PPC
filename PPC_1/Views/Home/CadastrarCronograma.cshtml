@model PPC_1.Models.Cronograma
@{
    ViewBag.Title = "CadastrarCronograma";
}

<section class="content-header">
    <h1>
        Cronograma de Atividades
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cronograma de Atividades</a></li>
        <li class="active">Cadastro de Cronograma</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Cadastro de Cronograma</h3>
                </div>
                <form role="form" method="post" action="NovoCronograma">
                    <div class="box-body">
                        <div class="form-group col-xs-12">
                            <label>Número da Aula</label>
                            @Html.TextBoxFor(x => x.NAula, new { @class = "form-control", type = "number" })
                            <label>Descrição</label>
                            @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control", type = "text" })
                        </div>
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-primary pull-right espaco" name="salvar">Salvar</button>
                            <a href="" class="btn btn-warning pull-right espaco" name="cancelar">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


