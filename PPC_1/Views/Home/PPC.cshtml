@model PPC_1.Models.Ppc
@{
    ViewBag.Title = "PPC";
}


<section class="content-header">
    <h1>
        PPC
        <small>Listas de todos os PPCs cadastrados</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">PPC</a></li>
        <li class="active">Todos os PPCs</li>
    </ol>
</section>

<section id="tdCursos" class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>ID PPC</th>
                                <th>Perfil do Curso</th>
                                <th>ID Curso</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.ListaDePpcs)
                            {
                                <tr>
                                    <td><button iddoppc="@item.Id" class="btn btn-primary CarregarPPCs">Abrir</button></td>
                                    <td>@item.Id</td>
                                    <td>@item.PerfilDoCurso</td>
                                    <td>@item.IdCurso</td>
                                    <td>
                                        <a href="/Home/excluirPpc?id=@item.Id" class="btn btn-danger">Excluir</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th>ID PPC</th>
                                <th>Perfil do Curso</th>
                                <th>ID Curso</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="tabelaescondida" class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Todos os PPCs</h3>
                </div>
                <form role="form" action="AtualizarPpc">
                    <div class="box-body">
                        @Html.HiddenFor(x => x.Id, new { id = "IdPPC" })
                        @Html.HiddenFor(x => x.IdCurso, new { id = "IdCurso" })
                        <div class="form-group col-xs-5">
                            <label>Cursos</label>
                            <select class="form-control" id="selecaoDeCurso"></select>
                        </div>
                        <div class="form-group col-xs-6 pull-right">
                            <label>Perfil Curso:</label>
                            @Html.TextBoxFor(x => x.PerfilDoCurso, new { @class = "form-control", type = "text", id = "PerfilDoCurso" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Perfil Egresso:</label>
                            @Html.TextBoxFor(x => x.PerfilDoEgresso, new { @class = "form-control", type = "text", id = "PerfilDoEgresso" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Forma de Acesso Curso:</label>
                            @Html.TextBoxFor(x => x.FormaDeAcesso, new { @class = "form-control", type = "text", id = "FormaDeAcesso" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Representação Gráfica de um perfil de Formação:</label>
                            @Html.TextBoxFor(x => x.RepresentacaoGrafica, new { @class = "form-control", type = "text", id = "RepresetacaoGrafica" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Sistema de Avaliação do Processo Ensino Aprendizagem:</label>
                            @Html.TextBoxFor(x => x.SistemaAvaliacaoEnsinoAprendizagem, new { @class = "form-control", type = "text", id = "SistemaAvaliacaoEnsinoAprendizagem" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Sistema de Avaliação do Projeto do Curso:</label>
                            @Html.TextBoxFor(x => x.SistemaAvaliacaoCurso, new { @class = "form-control", type = "text", id = "SistemaAvaliacaoCurso" })
                        </div>
                        <div class="form-group col-xs-3">
                            <label>Trabalho de Conclusão de Curso</label>
                            @Html.TextBoxFor(x => x.TCC, new { @class = "form-control", type = "text", id = "TCC" })
                        </div>
                        <div class="form-group col-xs-3">
                            <label>Estágio Curricular:</label>
                            @Html.TextBoxFor(x => x.EstagioCurricular, new { @class = "form-control", type = "text", id = "EstagioCurricular" })
                        </div>
                        <div class="form-group col-xs-12">
                            <label>Políticas de Atendimento a Pessoas com Deficiências e/ou Mobilidade Reduzida:</label>
                            @Html.TextAreaFor(x => x.PraticaAtenPCD, new { @class = "form-control", type = "text", rows = "3", placeholder = "Texto ...", id = "PraticaAtenPCD" })
                        </div>
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-primary pull-right espaco" id="salvar">Salvar</button>
                            <a class="btn btn-warning pull-right espaco" id="alterarCadastroPpc">Alterar</a>
                            <a href="/Home/PPC" class="btn btn-warning pull-right espaco">Cancelar</a>
                            <a href="/Home/PPC" class="btn btn-info pull-right espaco">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>