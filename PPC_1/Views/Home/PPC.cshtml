
@{
    ViewBag.Title = "PPC";
}


<section class="content-header">
    <h1>
        PPC
        <small>Listas de todos os PPCs cadastrados</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">PPC</a></li>
        <li class="active">Todos os PPCs</li>
    </ol>
</section>

<section  id="tdCursos" class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>ID PPC</th>
                                <th>Perfil do Curso</th>
                                <th>ID Curso</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.ListaDePpcs)
                            {
                                <tr>
                                    <td><button iddoppc="@item.Id" class="btn btn-primary CarregarPPCs">Abrir</button></td>
                                    <td>@item.Id</td>
                                    <td>@item.PerfilDoCurso</td>
                                    <td>@item.IdCurso</td>
                                    <td>
                                        <a href="/Home/excluirPpc?id=@item.Id" class="btn btn-danger">Excluir</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th>ID PPC</th>
                                <th>Perfil do Curso</th>
                                <th>ID Curso</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="tabelaescondida" class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Todos os PPCs</h3>
                </div>
                <form role="form">
                    <div class="box-body">
                        <div class="form-group col-xs-5">
                            <label>Cursos</label>
                            <select class="form-control">
                                <option>Curso 1</option>
                                <option>Curso 1</option>
                                <option>Curso 1</option>
                                <option>Curso 1</option>
                            </select>
                        </div>
                        <div class="form-group col-xs-6 pull-right">
                            <label>Perfil Curso:</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Perfil Egresso:</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Forma de Acesso Curso:</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Representação Gráfica de um perfil de Formação:</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Sistema de Avaliação do Processo Ensino Aprendizagem:</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Sistema de Avaliação do Projeto do Curso:</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group col-xs-3">
                            <label>Trabalho de Conclusão de Curso</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group col-xs-3">
                            <label>Estágio Curricular:</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group col-xs-12">
                            <label>Políticas de Atendimento a Pessoas com Deficiências e/ou Mobilidade Reduzida:</label>
                            <textarea class="form-control" rows="3" placeholder="Texto ..."></textarea>
                        </div>
                        <div class="form-group col-xs-12">
                            <button class="btn btn-primary pull-right espaco">Salvar</button>
                            <button class="btn btn-warning pull-right espaco">Cancelar</button>
                            <button href="/Home/PPC" class="btn btn-info pull-right espaco">Voltar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>