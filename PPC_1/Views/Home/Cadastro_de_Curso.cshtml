@model PPC_1.Models.Curso

@{
    ViewBag.Title = "Cadastro_de_Curso";
    
}

<section class="content-header">
    <h1>
        Cursos
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Curso</a></li>
        <li class="active">Novo Curso</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Cadastrar Cursos</h3>
                </div>
                <form role="form" action="/Home/NovoCurso">
                    <div class="box-body">
                        <div class="form-group col-xs-6">
                            <label>Tipo do Curso</label>
                            @Html.TextBoxFor(x => x.TipoDeCurso, new { @class = "form-control", type = "text", placeholder = "Tipo ..." })
                        </div>
                        <div class="form-group col-xs-6 pull-right">
                            <label>Modalidade:</label>
                            @Html.TextBoxFor(x => x.Modalidade, new { @class = "form-control", type = "text", placeholder = "Modalidade ..." })
                        </div>
                        <div class="form-group col-xs-12">
                            <label>Denominação do Curso:</label>
                            @Html.TextBoxFor(x => x.DenominacaoCurso, new { @class = "form-control", type = "text" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Habilitação:</label>
                            @Html.TextBoxFor(x => x.Habilitacao, new { @class = "form-control", type = "text", placehilder = "Habilitação..." })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Local de Oferta:</label>
                            @Html.TextBoxFor(x => x.LocalDeOferta, new { @class = "form-control", type = "text" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Turnos de Funcionamento:</label>
                            @Html.TextBoxFor(x => x.TurnosDeFuncionamento, new { @class = "form-control", type = "text" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Números de vagas para cada turno:</label>
                            @Html.TextBoxFor(x => x.NumerosDeVagasCadaTurno, new { @class = "form-control", type = "text" })
                        </div>
                        <div class="form-group col-xs-12">
                            <label>Carga Horária do Curso</label>
                            @Html.TextBoxFor(x => x.CargaHorariaDoCurso, new { @class = "form-control-static", maxlength = "10", type = "number" })
                        </div>
                        <div class="form-group col-xs-12">
                            <h4>Estrutura Curricular</h4>
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Regime Letivo:</label>
                            @Html.TextBoxFor(x => x.RegimeLetivo, new { @class = "form-control", type = "text" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Periodos:</label>
                            @Html.TextBoxFor(x => x.Periodos, new { @class = "form-control", type = "text", placeholder = "Texto ..." })
                        </div>
                        <div class="form-group col-xs-12">
                            <h4>Coordenador do Curso</h4>
                        </div>
                        <div class="form-group col-xs-10">
                            <label>Nome</label>
                            <select class="form-control" id="selectCoordenador">
                                <option value="0">< Selecione o Coordenador ></option>
                                @foreach (var item in ViewBag.ListaDeCoordenadores)
                                {
                                    <option value="@item.Id">@item.Nome</option>
                                }
                            </select>
                        </div>
                        @Html.HiddenFor(x => x.CoordenadorCurso, new { type = "hidden", id = "preencheautoid"})
                        <div class="form-group col-xs-2">
                            <button class="form-control btn btn-info">+ Coordenador</button>
                        </div>
                        <div class="form-group col-xs-5">
                            <label>CPF</label>
                            <input type="number" class="form-control" id="preencheautoCpf" readonly />
                        </div>
                        <div class="form-group col-xs-7">
                            <label>Titulação</label>
                            <input type="text" class="form-control" id="preencheautoMTitulacao" readonly />
                        </div>
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-primary pull-right espaco">Salvar</button>
                            <button class="btn btn-warning pull-right espaco">Cancelar</button>
                            <button href="/Home/ConsultarCurso" class="btn btn-info pull-right espaco">Voltar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
