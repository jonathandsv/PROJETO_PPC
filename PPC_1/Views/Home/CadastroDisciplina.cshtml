
@{
    ViewBag.Title = "CadastroDisciplina";
}

<section class="content-header">
    <h1>
        Disciplina
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Disciplina</a></li>
        <li class="active">Cadastro de Disciplina</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Cadastrar Disciplina</h3>
                </div>
                <form role="form">
                    <div class="box-body">
                        <div class="form-group col-xs-12">
                            <label>Nome da Disciplina</label>
                            <input type="text" class="form-control" />

                            <label>Descrição</label>
                            <input type="text" class="form-control" placeholder="Teórica ou prática" />

                            <label>Código da Disciplina</label>
                            <input type="text" class="form-control" />

                            <label>Semestre</label>
                            <input type="text" class="form-control" />

                            <label>Carga Horária</label>
                            <input type="text" class="form-control" placeholder="Valores: 30, 60, 90, 120" />

                        </div>
                        <div class="form-group col-xs-12">
                            <button class="btn btn-primary pull-right espaco">Salvar</button>
                            <button class="btn btn-warning pull-right espaco">Cancelar</button>
                        </div>
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</section>